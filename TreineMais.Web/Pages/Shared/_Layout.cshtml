@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var nomeUsuario = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioNome");
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <title>Treine+</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header class="navbar navbar-dark bg-primary">
        <div class="container-fluid d-flex justify-content-between">

            <!-- Logo -->
            <span class="navbar-brand">
                🏋️ Treine+
            </span>

            <!-- Menu Direita -->
            <div style="color:white; display:flex; gap:15px; align-items:center;">

                @{
                    var nome = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioNome");
                }

                @if (!string.IsNullOrEmpty(nome))
                {
                    <span>👤 @nome</span>

                    <a href="/AlterarSenha" style="color:white;">
                        Alterar Senha
                    </a>

                    <a href="/Logout" style="color:white;">
                        Sair
                    </a>
                }

            </div>

        </div>
    </header>


    <!-- CONTEÚDO PRINCIPAL -->
    <main class="container my-4 flex-fill">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-light text-center text-muted py-3 mt-auto">
        <small>
            Treine+ © @DateTime.Now.Year — Sistema de treinos para academias e personal trainers
        </small>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>