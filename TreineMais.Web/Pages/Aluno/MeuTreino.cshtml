@page
@model TreineMais.Web.Pages.Aluno.MeuTreinoModel

<h2 class="mb-4">Meu Treino</h2>

@if (Model.Treinos == null || !Model.Treinos.Any())
{
    <div class="alert alert-info">
        Nenhum treino disponível hoje.
    </div>
}
else
{
    foreach (var treino in Model.Treinos)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-dark text-white">
                <strong>@treino.Nome</strong> - @treino.DiaSemana
            </div>

            <div class="card-body">
                @foreach (var ex in Model.Exercicios)
                {
                    <div class="card mb-2 p-2">
                        <strong>@ex.Nome</strong>
                        <br />
                        <small>@ex.GrupoMuscular</small>

                        @if (ex.Concluido)
                        {
                            <span class="badge bg-success">✔ Concluído</span>
                        }
                        else
                        {
                            <button class="btn btn-primary btn-sm">
                                Concluir
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    }
}