@model TreineMais.Web.Pages.Aluno.IndexModel

<h2>Ol√°, @Model.NomeAluno üëã</h2>
<p class="text-muted">
    Treino de hoje ‚Äî <strong>@Model.DiaSemana</strong>
</p>

@if (!Model.Exercicios.Any())
{
    <div class="alert alert-info mt-3">
        Nenhum treino cadastrado para hoje.
    </div>
}
else
{
    <form method="post">
        <div class="row">
            @foreach (var ex in Model.Exercicios)
            {
                <div class="col-12 col-md-6 mb-3">
                    <div class="card @(ex.Concluido ? "bg-success bg-opacity-10" : "")">
                        <div class="card-body">
                            <h5 class="card-title">@ex.Nome</h5>

                            <p class="card-text">
                                <strong>@ex.Series x @ex.Repeticoes</strong><br />
                                Descanso: @ex.Descanso s<br />
                                <span class="badge bg-primary">
                                    @ex.GrupoMuscular
                                </span>
                            </p>

                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox"
                                       onclick="concluirExercicio(@ex.Id, @Model.AlunoId)" />

                                <label class="form-check-label">
                                    Conclu√≠do ‚úÖ
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-success mt-3">
            Salvar progresso
        </button>
    </form>

    <p class="mt-3 fw-bold">
        @Model.Resumo
    </p>
}

<!-- ‚úÖ SCRIPT FICA AQUI, NO FINAL DO ARQUIVO -->
<script>
    function concluirExercicio(exercicioId, alunoId) {
        fetch("http://localhost:5129/api/exercicio-conclusoes", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                exercicioId: exercicioId,
                alunoId: alunoId
            })
        });
    }
</script>

